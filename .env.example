NODE_ENV=development
# MongoDB Configuration
# When MONGO_URI is set, the backend will use a real MongoDB instance
# When missing, the backend will use mongodb-memory-server for development
# For Docker: mongodb://vehicle_user:vehicle_pass@localhost:27017/vehicle-watchlist
# For local dev without auth: mongodb://localhost:27017/vehicle-watchlist
MONGO_URI=mongodb://vehicle_user:vehicle_pass@localhost:27017/vehicle-watchlist

# JWT Secret for authentication tokens
JWT_SECRET=jwt-secret-key

# Optional: JWT Token Expiration (default: 7d)
JWT_EXPIRES_IN=7d

# Gov il API Configuration
RESOURCE_ID=resource-id

# OAuth Configuration (Optional)
# Google OAuth
GOOGLE_CLIENT_ID=google-client-id
GOOGLE_CLIENT_SECRET=google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=github-client-id
GITHUB_CLIENT_SECRET=github-client-secret

# API Configuration
# Defaults to /api if not set
# For local dev with separate ports, you can use: http://localhost:3000/api
NEXT_PUBLIC_API_URL=/api

# Server Port
PORT=3000
